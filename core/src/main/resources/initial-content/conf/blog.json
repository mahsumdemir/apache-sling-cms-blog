{
  "jcr:content": {
    "jcr:primaryType": "nt:unstructured",
    "jcr:title": "Blog"
  },
  "site": {
    "jcr:primaryType": "sling:Config",
    "sling:resourceType": "sling-cms/components/cms/siteconfig",
    "jcr:title": "Blog configuration",
    "templates": {
      "blog-post": {
        "jcr:title": "Blog post page template",
        "template": {
          "jcr:primaryType": "sling:Page",
          "jcr:content": {
            "jcr:primaryType": "nt:unstructured",
            "jcr:title": "{{title}}",
            "sling:template": "/conf/blog/site/templates/blog-post",
            "sling:resourceType": "blog/pages/blog-post",
            "published": false,
            "container": {
              "blog_post_header": {
                "sling:resourceType": "blog/components/blog-header"
              }
            }
          }
        },
        "allowedPaths": [
          "/content/blog/blog-mahsumdemir-com.*"
        ],
        "availableComponentTypes": [
          "General",
          "Blog"
        ],
        "sling:resourceType": "sling-cms/components/cms/pagetemplate",
        "fields": {
          "jcr:primaryType": "nt:unstructured",
          "text": {
            "jcr:primaryType": "nt:unstructured",
            "required": true,
            "name": "title",
            "type": "text",
            "label": "Title",
            "sling:resourceType": "sling-cms/components/editor/fields/text"
          },
          "name": {
            "jcr:primaryType": "nt:unstructured",
            "required": true,
            "name": ":name",
            "type": "text",
            "label": "Name",
            "sling:resourceType": "sling-cms/components/editor/fields/text"
          }
        },
        "componentConfigurations": {
          "ctaComponentConfig": {
            "sling:resourceType": "sling-cms/components/cms/componentconfig",
            "type": "reference/components/general/cta",
            "ctaClasses": "Information=info,Warning=warn"
          }
        }
      }
    }
  }
}